# This file is for unifying the coding style for different editors and IDEs
# See editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.adoc]
charset = utf-8
insert_final_newline = true

[*.puml]
charset = utf-8
insert_final_newline = true

[*.yml *.yaml]
charset = utf-8
insert_final_newline = true
